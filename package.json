{
  "name": "@mcpkit/mcpm",
  "version": "0.1.0",
  "description": "A CLI tool to scaffold and manage MCP servers",
  "keywords": [
    "mcp",
    "cli",
    "scaffold",
    "server"
  ],
  "author": "Trevor Uptain <trevoruptain@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trevoruptain/mcpm.git"
  },
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "mcpm": "dist/cli.js"
  },
  "files": [
    "dist",
    "src/templates",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc && cp -R src/templates dist/templates",
    "start": "node dist/cli.js",
    "prepare": "npm run build"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.40",
    "@types/node": "^22.13.10",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
